<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom right side 2dp Shadow -->
    <item >
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <solid android:color="@color/black_opacity" />
        </shape>
    </item>

    <!-- Bottom 2dp Shadow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <solid android:color="@color/black_opacity" />
        </shape>
    </item>

    <!-- White Top color -->
    <item android:bottom="1.5dp" android:right="1dp" android:left="0.5dp">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <solid android:color="@color/sky_blue" />
        </shape>
    </item>
</layer-list>