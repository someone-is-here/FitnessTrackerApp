<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_edit_profile"
    tools:context=".mvvm.fragments.app_settings.AppSettingsFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/back_user_account"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icBack"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:padding="14dp"
                android:src="@drawable/btn_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/itim"
                android:gravity="left"
                android:shadowColor="@color/black_opacity"
                android:shadowDx="7"
                android:shadowDy="7"
                android:shadowRadius="3"
                android:text="@string/edit_profile"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.419"
                app:layout_constraintStart_toEndOf="@+id/icBack"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llUserInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:alpha="0.85"
                    android:src="@drawable/ic_profile" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/itim"
                        android:text="@string/username"
                        android:textAllCaps="true"
                        android:textColor="@color/white_60"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/etUsername"
                        android:layout_width="172dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-5dp"
                        android:background="@drawable/edit_text_bottom_line"
                        android:fontFamily="@font/itim"
                        android:inputType="textEmailAddress"
                        android:padding="1dp"
                        android:shadowColor="@color/black_opacity"
                        android:shadowDx="7"
                        android:shadowDy="7"
                        android:shadowRadius="3"
                        android:text="Alexandr"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.495"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvLogin"
                        app:layout_constraintVertical_bias="0.0" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="15dp"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:alpha="0.9"
                android:background="@drawable/shadow_for_rectangle"
                android:ems="10"
                android:fontFamily="@font/itim"
                android:gravity="top"
                android:hint="@string/bio"
                android:textSize="20sp"
                android:inputType="textMultiLine"
                android:padding="15dp"
                android:shadowColor="@color/black_opacity"
                android:shadowDx="7"
                android:shadowDy="7"
                android:shadowRadius="3"
                android:textColor="@color/white"
                android:textColorHint="@color/white_75" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/itim"
                    android:text="@string/email"
                    android:textAllCaps="true"
                    android:textColor="@color/black_opacity"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:background="@drawable/edit_text_bottom_line"
                    android:fontFamily="@font/itim"
                    android:inputType="textEmailAddress"
                    android:padding="1dp"
                    android:shadowColor="@color/black_opacity"
                    android:shadowDx="7"
                    android:shadowDy="7"
                    android:shadowRadius="3"
                    android:text="email@gmail.com"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.495"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvLogin"
                    app:layout_constraintVertical_bias="0.0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/edit_text_bottom_line"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/itim"
                    android:text="@string/location"
                    android:textAllCaps="true"
                    android:textColor="@color/black_opacity"
                    android:textSize="12sp" />

                <Spinner
                    android:id="@+id/spLocation"
                    style="@android:style/Widget.Holo.Light.Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:dropDownVerticalOffset="40dp"
                    android:popupBackground="@android:color/transparent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/edit_text_bottom_line"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/itim"
                    android:text="@string/birthday"
                    android:textAllCaps="true"
                    android:textColor="@color/black_opacity"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btnBirthday"
                    style="@android:style/Widget.Holo.Light.Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:layout_marginBottom="-5dp"
                    android:fontFamily="@font/itim"
                    android:padding="1dp"
                    android:shadowColor="@color/black_opacity"
                    android:shadowDx="7"
                    android:shadowDy="7"
                    android:shadowRadius="3"
                    android:text="28.07.2002"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.495"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvLogin"
                    app:layout_constraintVertical_bias="0.0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/edit_text_bottom_line"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/itim"
                    android:text="@string/height"
                    android:textAllCaps="true"
                    android:textColor="@color/black_opacity"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btnHeight"
                    style="@android:style/Widget.Holo.Light.Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:layout_marginBottom="-5dp"
                    android:fontFamily="@font/itim"
                    android:padding="1dp"
                    android:shadowColor="@color/black_opacity"
                    android:shadowDx="7"
                    android:shadowDy="7"
                    android:shadowRadius="3"
                    android:text="165 cm"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.495"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvLogin"
                    app:layout_constraintVertical_bias="0.0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/edit_text_bottom_line"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/itim"
                    android:text="@string/height"
                    android:textAllCaps="true"
                    android:textColor="@color/black_opacity"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btnWeight"
                    style="@android:style/Widget.Holo.Light.Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:layout_marginBottom="-5dp"
                    android:fontFamily="@font/itim"
                    android:padding="1dp"
                    android:shadowColor="@color/black_opacity"
                    android:shadowDx="7"
                    android:shadowDy="7"
                    android:shadowRadius="3"
                    android:text="50 kg"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.495"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvLogin"
                    app:layout_constraintVertical_bias="0.0" />

            </LinearLayout>

            <TextView
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginVertical="20dp"
                android:alpha="0.9"
                android:background="@drawable/btn_login_welcome_normal"
                android:elevation="5dp"
                android:fontFamily="@font/itim"
                android:gravity="center"
                android:padding="2dp"
                android:shadowColor="@color/black_opacity"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="3"
                android:text="@string/save"
                android:textColor="@color/white"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.805" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
