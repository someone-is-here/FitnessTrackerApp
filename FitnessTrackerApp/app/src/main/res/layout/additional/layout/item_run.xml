<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/sky_blue"
    android:background="@drawable/white_borders"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp"
    android:layout_marginHorizontal="5dp"
    android:padding="10dp">

    <Button
        android:id="@+id/btnDeleteRun"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/ic_cancel"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#fff"
        android:textSize="18sp"
        android:visibility="visible"
        android:backgroundTint="@color/nav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivRunImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sky_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivRunImage">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDistanceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/itim"
                    android:paddingHorizontal="5dp"
                    android:text="@string/distance"
                    android:textAllCaps="true"
                    android:textColor="@color/white_60"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/itim"
                    android:padding="3dp"
                    android:shadowColor="@color/black_opacity"
                    android:shadowDx="7"
                    android:shadowDy="7"
                    android:shadowRadius="3"
                    android:text="10.000 km"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="2dp"
                android:layout_height="45dp"
                android:alpha="0.9"
                android:background="@color/white"
                android:fontFamily="@font/itim"
                android:layout_marginHorizontal="4dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDurationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/itim"
                    android:paddingHorizontal="5dp"
                    android:text="@string/duration"
                    android:textAllCaps="true"
                    android:textColor="@color/white_60"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/itim"
                    android:padding="3dp"
                    android:shadowColor="@color/black_opacity"
                    android:shadowDx="7"
                    android:shadowDy="7"
                    android:shadowRadius="3"
                    android:text="1h 32min"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="2dp"
                android:layout_height="45dp"
                android:alpha="0.9"
                android:background="@color/white"
                android:fontFamily="@font/itim"
                android:layout_marginHorizontal="4dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvAvgSpeedText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/itim"
                    android:paddingHorizontal="5dp"
                    android:text="@string/avg_speed"
                    android:textAllCaps="true"
                    android:textColor="@color/white_60"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvAvgSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/itim"
                    android:padding="3dp"
                    android:shadowColor="@color/black_opacity"
                    android:shadowDx="7"
                    android:shadowDy="7"
                    android:shadowRadius="3"
                    android:text="8.7 km/h"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="2dp"
                android:layout_height="45dp"
                android:alpha="0.9"
                android:background="@color/white"
                android:fontFamily="@font/itim"
                android:layout_marginHorizontal="4dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCaloriesBurnedText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/itim"
                    android:paddingHorizontal="5dp"
                    android:text="@string/calories"
                    android:textAllCaps="true"
                    android:textColor="@color/white_60"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvCaloriesBurned"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/itim"
                    android:padding="3dp"
                    android:shadowColor="@color/black_opacity"
                    android:shadowDx="7"
                    android:shadowDy="7"
                    android:shadowRadius="3"
                    android:text="1000kcal"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>


        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvDateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/itim"
                    android:paddingHorizontal="5dp"
                    android:text="@string/date"
                    android:textAllCaps="true"
                    android:textColor="@color/white_60"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/itim"
                    android:padding="3dp"
                    android:shadowColor="@color/black_opacity"
                    android:shadowDx="7"
                    android:shadowDy="7"
                    android:shadowRadius="3"
                    android:text="26.05.2024"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btnPublish"
                android:layout_width="236dp"
                android:layout_height="38dp"
                android:alpha="0.75"
                android:background="@drawable/btn_sign_up_welcome"
                android:drawableEnd="@drawable/ic_send"
                android:drawablePadding="15dp"
                android:fontFamily="@font/itim"
                android:paddingHorizontal="15dp"
                android:shadowColor="@color/black_opacity"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="3"
                android:text="@string/publish"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

