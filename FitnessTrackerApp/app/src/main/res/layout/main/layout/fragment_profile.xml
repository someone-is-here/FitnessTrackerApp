<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_app_settings"
    tools:context=".mvvm.fragments.main.ProfileFragment">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/backgroud4"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tvProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/itim"
                android:gravity="center"
                android:letterSpacing="0.1"
                android:shadowColor="@color/black_opacity"
                android:shadowDx="7"
                android:shadowDy="7"
                android:shadowRadius="3"
                android:text="@string/profile"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.571" />

            <Button
                    android:id="@+id/btnSettings"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="31dp"
                    android:contentDescription="@string/settings"
                    android:background="@drawable/ic_settings"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.951"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.023" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llUserInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/white_borders">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginVertical="10dp"
                android:alpha="0.85"
                android:src="@drawable/img_profile_photo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoSizeTextType="uniform"
                    android:alpha="0.9"
                    android:fontFamily="@font/itim"
                    android:padding="1dp"
                    android:shadowColor="@color/black_opacity"
                    android:shadowDx="7"
                    android:shadowDy="7"
                    android:shadowRadius="3"
                    android:text="Alexandr"
                    android:textColor="@color/white"
                    android:textSize="26sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.495"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvLogin"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/tvCountry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/itim"
                    android:autoSizeTextType="uniform"
                    android:padding="1dp"
                    android:shadowColor="@color/black_opacity"
                    android:shadowDx="7"
                    android:shadowDy="7"
                    android:shadowRadius="3"
                    android:text="Belarus"
                    android:textColor="@color/white_75"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.495"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvLogin"
                    app:layout_constraintVertical_bias="0.0" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvFollowersNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/itim"
                        android:padding="1dp"
                        android:shadowColor="@color/black_opacity"
                        android:shadowDx="7"
                        android:shadowDy="7"
                        android:shadowRadius="3"
                        android:textAllCaps="true"
                        android:text="10"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvFollowers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.9"
                        android:fontFamily="@font/itim"
                        android:padding="1dp"
                        android:autoSizeTextType="uniform"
                        android:shadowColor="@color/black_opacity"
                        android:shadowDx="7"
                        android:shadowDy="7"
                        android:shadowRadius="3"
                        android:text="@string/followers"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.9"
                        android:fontFamily="@font/itim"
                        android:layout_marginHorizontal="4dp"
                        android:shadowColor="@color/black_opacity"
                        android:shadowDx="7"
                        android:shadowDy="7"
                        android:shadowRadius="3"
                        android:text="|"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tvFollowingNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/itim"
                        android:padding="1dp"
                        android:shadowColor="@color/black_opacity"
                        android:shadowDx="7"
                        android:shadowDy="7"
                        android:shadowRadius="3"
                        android:textAllCaps="true"
                        android:text="220"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvFollowing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/itim"
                        android:padding="1dp"
                        android:shadowColor="@color/black_opacity"
                        android:shadowDx="7"
                        android:shadowDy="7"
                        android:shadowRadius="3"
                        android:textAllCaps="true"
                        android:autoSizeTextType="uniform"
                        android:text="@string/following"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvBio"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:alpha="0.9"
                android:background="@drawable/shadow_for_rectangle"
                android:ems="10"
                android:fontFamily="@font/itim"
                android:gravity="top"
                android:hint="@string/bio"
                android:textSize="20sp"
                android:padding="15dp"
                android:shadowColor="@color/black_opacity"
                android:shadowDx="7"
                android:shadowDy="7"
                android:shadowRadius="3"
                android:textColor="@color/white"
                android:textColorHint="@color/white_75" />

            </LinearLayout>

    </ScrollView>

</LinearLayout>
