<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_edit_profile"
    tools:context=".mvvm.fragments.app_settings.CreateAnAccountFragment"
    android:id="@+id/nav_setup">


    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="match_parent"
        android:layout_height="161dp"
        android:background="@drawable/backgroud4"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCreateAccount"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="14dp"
        android:layout_alignParentEnd="true"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/itim"
        android:gravity="center"
        android:shadowColor="@color/black_opacity"
        android:shadowDx="7"
        android:shadowDy="7"
        android:shadowRadius="3"
        android:text="@string/create_an_account"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnUploadBackground"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/transparent"
        android:clickable="true"
        android:src="@drawable/ic_upload"
        app:borderWidth="0dp"
        app:fabCustomSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.893" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnUploadProfile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:backgroundTint="@color/black_20"
        android:clickable="true"
        android:src="@drawable/ic_upload"
        app:borderWidth="0dp"
        app:fabCustomSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_profile"
        app:layout_constraintEnd_toEndOf="@+id/iv_profile"
        app:layout_constraintHorizontal_bias="0.78"
        app:layout_constraintStart_toStartOf="@+id/iv_profile" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_profile"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/img_profile_photo"
        android:background="@color/transparent"
        app:civ_border_color="#FFFFFF"
        app:civ_border_overlay="true"
        app:civ_border_width="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_background" />
    <!--        </androidx.constraintlayout.widget.ConstraintLayout>-->
    <RelativeLayout
        android:id="@+id/linear"
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_background"
        app:layout_constraintVertical_bias="0.0" />
        <ScrollView
            android:animateLayoutChanges="true"
            android:fillViewport="true"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linear">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="15dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etBio"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:alpha="0.9"
                    android:background="@drawable/shadow_for_rectangle"
                    android:ems="10"
                    android:fontFamily="@font/itim"
                    android:gravity="top"
                    android:hint="@string/bio"
                    android:inputType="textMultiLine"
                    android:padding="15dp"
                    android:shadowColor="@color/black_opacity"
                    android:shadowDx="7"
                    android:shadowDy="7"
                    android:shadowRadius="3"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white_75"
                    android:textSize="20sp" />
                <LinearLayout
                    android:id="@+id/llUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/itim"
                        android:text="@string/username"
                        android:textAllCaps="true"
                        android:textColor="@color/black_opacity"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/etUsername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-5dp"
                        android:background="@drawable/edit_text_bottom_line"
                        android:fontFamily="@font/itim"
                        android:inputType="textEmailAddress"
                        android:padding="1dp"
                        android:editable="false"
                        android:shadowColor="@color/black_opacity"
                        android:shadowDx="7"
                        android:shadowDy="7"
                        android:shadowRadius="3"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.495"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvLogin"
                        app:layout_constraintVertical_bias="0.0" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/itim"
                        android:text="@string/email"
                        android:textAllCaps="true"
                        android:textColor="@color/black_opacity"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-5dp"
                        android:background="@drawable/edit_text_bottom_line"
                        android:fontFamily="@font/itim"
                        android:inputType="textEmailAddress"
                        android:padding="1dp"
                        android:enabled="false"
                        android:shadowColor="@color/black_opacity"
                        android:shadowDx="7"
                        android:shadowDy="7"
                        android:shadowRadius="3"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.495"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvLogin"
                        app:layout_constraintVertical_bias="0.0" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llCounty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_text_bottom_line"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:fontFamily="@font/itim"
                        android:text="@string/country"
                        android:textAllCaps="true"
                        android:textColor="@color/black_opacity"
                        android:textSize="12sp" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:backgroundTint="@color/transparent"
                        android:theme="@style/Theme.MaterialComponents.DayNight"
                        app:cardCornerRadius="4dp"
                        app:strokeColor="@color/white"
                        app:strokeWidth="2dp">

                        <Spinner
                            android:id="@+id/spLocation"
                            style="@android:style/Widget.Holo.Light.Spinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:dropDownVerticalOffset="40dp" />

                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llBirthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_text_bottom_line"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/itim"
                        android:text="@string/birthday"
                        android:textAllCaps="true"
                        android:textColor="@color/black_opacity"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/btnBirthday"
                        style="@android:style/Widget.Holo.Light.Spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-10dp"
                        android:layout_marginBottom="-5dp"
                        android:background="@color/transparent"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:fontFamily="@font/itim"
                        android:padding="1dp"
                        android:shadowColor="@color/black_opacity"
                        android:shadowDx="7"
                        android:shadowDy="7"
                        android:shadowRadius="3"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.495"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvLogin"
                        app:layout_constraintVertical_bias="0.0" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llHeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_text_bottom_line"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/itim"
                        android:text="@string/height"
                        android:textAllCaps="true"
                        android:textColor="@color/black_opacity"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/btnHeight"
                        style="@android:style/Widget.Holo.Light.Spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-10dp"
                        android:layout_marginBottom="-5dp"
                        android:background="@color/transparent"
                        android:fontFamily="@font/itim"
                        android:padding="1dp"
                        android:shadowColor="@color/black_opacity"
                        android:shadowDx="7"
                        android:shadowDy="7"
                        android:shadowRadius="3"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.495"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvLogin"
                        app:layout_constraintVertical_bias="0.0" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llWeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_text_bottom_line"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/itim"
                        android:text="@string/weight"
                        android:textAllCaps="true"
                        android:textColor="@color/black_opacity"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/btnWeight"
                        style="@android:style/Widget.Holo.Light.Spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-10dp"
                        android:layout_marginBottom="-5dp"
                        android:background="@color/transparent"
                        android:fontFamily="@font/itim"
                        android:padding="1dp"
                        android:shadowColor="@color/black_opacity"
                        android:shadowDx="7"
                        android:shadowDy="7"
                        android:shadowRadius="3"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.495"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvLogin"
                        app:layout_constraintVertical_bias="0.0" />

                </LinearLayout>

                <TextView
                    android:id="@+id/btnSave"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginVertical="20dp"
                    android:alpha="0.9"
                    android:background="@drawable/btn_login_welcome"
                    android:elevation="5dp"
                    android:fontFamily="@font/itim"
                    android:gravity="center"
                    android:padding="2dp"
                    android:shadowColor="@color/black_opacity"
                    android:shadowDx="4"
                    android:shadowDy="4"
                    android:shadowRadius="3"
                    android:text="@string/save"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.805" />

            </LinearLayout>
        </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>