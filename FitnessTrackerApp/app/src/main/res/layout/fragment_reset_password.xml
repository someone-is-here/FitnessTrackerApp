<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.85"
    android:background="@mipmap/mountain_signing">

    <TextView
        android:id="@+id/tvResetPassword"
        android:layout_width="226dp"
        android:layout_height="90dp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/itim"
        android:shadowColor="@color/black_opacity"
        android:shadowDx="7"
        android:shadowDy="7"
        android:shadowRadius="3"
        android:text="@string/reset_password"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="272dp"
        android:layout_height="46dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/et_round_corners"
        android:ems="10"
        android:fontFamily="@font/itim"
        android:hint="@string/email"
        android:textSize="18sp"
        android:paddingVertical="10dp"
        android:inputType="textEmailAddress"
        android:padding="8dp"
        android:paddingStart="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black_opacity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvResetPassword"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/btnResetPassword"
        android:layout_width="284dp"
        android:layout_height="45dp"
        android:alpha="0.75"
        android:background="@drawable/btn_signing_round"
        android:elevation="5dp"
        android:fontFamily="@font/itim"
        android:gravity="center"
        android:padding="5dp"
        android:shadowColor="@color/black_opacity"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="3"
        android:text="@string/reset"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etEmail"
        app:layout_constraintVertical_bias="0.064" />

    <Button
        android:id="@+id/tvSignUp"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/itim"
        android:background="@drawable/btn_signing_text"
        android:textAllCaps="false"
        android:text="@string/sign_up_underline"
        android:gravity="center"
        android:layout_marginStart="15dp"
        android:textColor="@color/white_additional_info"
        android:textSize="18sp"
        android:padding="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnResetPassword"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/tvSignIn"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/itim"
        android:background="@drawable/btn_signing_text"
        android:textAllCaps="false"
        android:text="@string/sign_in_underline"
        android:padding="2dp"
        android:gravity="center"
        android:textColor="@color/white_additional_info"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tvSignUp"
        app:layout_constraintTop_toBottomOf="@+id/btnResetPassword"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnSettings"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="31dp"
        android:contentDescription="@string/settings"
        android:background="@drawable/ic_settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.951"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

</androidx.constraintlayout.widget.ConstraintLayout>